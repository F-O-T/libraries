{
   "name": "@f-o-t/spelling",
   "version": "1.0.0",
   "description": "Hunspell-compatible spell checking library with Zod schemas",
   "type": "module",
   "private": false,
   "module": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "exports": {
      ".": {
         "bun": "./src/index.ts",
         "import": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
         },
         "types": "./src/index.ts"
      },
      "./browser-storage": {
         "bun": "./src/browser-storage.ts",
         "import": {
            "default": "./dist/browser-storage.js",
            "types": "./dist/browser-storage.d.ts"
         },
         "types": "./src/browser-storage.ts"
      },
      "./package.json": "./package.json"
   },
   "files": [
      "dist"
   ],
   "scripts": {
      "build": "bunup",
      "check": "biome check --write .",
      "dev": "bunup --watch",
      "test": "bun test",
      "test:coverage": "bun test --coverage",
      "test:watch": "bun test --watch",
      "typecheck": "tsc"
   },
   "dependencies": {
      "zod": "^3.24.1"
   },
   "devDependencies": {
      "@biomejs/biome": "2.3.10",
      "@types/bun": "1.3.5",
      "bunup": "0.16.11",
      "typescript": "5.9.3"
   },
   "peerDependencies": {
      "typescript": ">=4.5.0"
   },
   "peerDependenciesMeta": {
      "typescript": {
         "optional": true
      }
   },
   "license": "MIT",
   "repository": {
      "type": "git",
      "url": "https://github.com/F-O-T/contentta-nx.git"
   },
   "homepage": "https://github.com/F-O-T/contentta-nx/blob/master/libraries/spelling",
   "bugs": {
      "url": "https://github.com/F-O-T/contentta-nx/issues"
   },
   "publishConfig": {
      "access": "public"
   }
}
