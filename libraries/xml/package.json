{
   "name": "@f-o-t/xml",
   "version": "1.0.0",
   "description": "Zero-dependency XML library with DOM parser, streaming SAX parser, serializer, XPath queries, and W3C Exclusive C14N canonicalization",
   "type": "module",
   "private": false,
   "module": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "exports": {
      ".": {
         "bun": "./src/index.ts",
         "import": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
         },
         "types": "./src/index.ts"
      },
      "./plugins/stream": {
         "bun": "./src/plugins/stream/index.ts",
         "import": {
            "default": "./dist/plugins/stream/index.js",
            "types": "./dist/plugins/stream/index.d.ts"
         },
         "types": "./src/plugins/stream/index.ts"
      },
      "./plugins/xpath": {
         "bun": "./src/plugins/xpath/index.ts",
         "import": {
            "default": "./dist/plugins/xpath/index.js",
            "types": "./dist/plugins/xpath/index.d.ts"
         },
         "types": "./src/plugins/xpath/index.ts"
      },
      "./plugins/canonicalize": {
         "bun": "./src/plugins/canonicalize/index.ts",
         "import": {
            "default": "./dist/plugins/canonicalize/index.js",
            "types": "./dist/plugins/canonicalize/index.d.ts"
         },
         "types": "./src/plugins/canonicalize/index.ts"
      },
      "./package.json": "./package.json"
   },
   "files": [
      "dist"
   ],
   "scripts": {
      "build": "fot build",
      "check": "fot check",
      "format": "fot format",
      "lint": "fot lint",
      "release": "bumpp --commit --push --tag",
      "test": "fot test"
   },
   "dependencies": {
      "zod": "4.3.6"
   },
   "devDependencies": {
      "@biomejs/biome": "2.3.12",
      "@f-o-t/cli": "workspace:*",
      "@f-o-t/config": "workspace:*",
      "@types/bun": "1.3.6",
      "bumpp": "10.4.0",
      "typescript": "5.9.3"
   },
   "peerDependencies": {
      "typescript": ">=4.5.0"
   },
   "peerDependenciesMeta": {
      "typescript": {
         "optional": true
      }
   },
   "license": "MIT",
   "repository": {
      "type": "git",
      "url": "https://github.com/F-O-T/contentta-nx.git"
   },
   "homepage": "https://github.com/F-O-T/contentta-nx/blob/master/libraries/xml",
   "bugs": {
      "url": "https://github.com/F-O-T/contentta-nx/issues"
   },
   "publishConfig": {
      "access": "public"
   }
}
