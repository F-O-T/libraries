{
   "name": "@f-o-t/xml",
   "version": "1.0.0",
   "description": "Zero-dependency XML library with DOM parser, streaming SAX parser, serializer, XPath queries, and W3C Exclusive C14N canonicalization",
   "type": "module",
   "private": false,
   "module": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "exports": {
      ".": {
         "bun": "./src/index.ts",
         "import": {
            "default": "./dist/index.js",
            "types": "./dist/index.d.ts"
         },
         "types": "./src/index.ts"
      },
      "./stream": {
         "bun": "./src/stream-parser.ts",
         "import": {
            "default": "./dist/stream-parser.js",
            "types": "./dist/stream-parser.d.ts"
         },
         "types": "./src/stream-parser.ts"
      },
      "./xpath": {
         "bun": "./src/xpath.ts",
         "import": {
            "default": "./dist/xpath.js",
            "types": "./dist/xpath.d.ts"
         },
         "types": "./src/xpath.ts"
      },
      "./canonicalize": {
         "bun": "./src/canonicalize.ts",
         "import": {
            "default": "./dist/canonicalize.js",
            "types": "./dist/canonicalize.d.ts"
         },
         "types": "./src/canonicalize.ts"
      },
      "./package.json": "./package.json"
   },
   "files": [
      "dist"
   ],
   "scripts": {
      "build": "bunup",
      "check": "biome check --write .",
      "dev": "bunup --watch",
      "release": "bumpp --commit --push --tag",
      "test": "bun test",
      "test:coverage": "bun test --coverage",
      "test:watch": "bun test --watch",
      "typecheck": "tsc"
   },
   "dependencies": {
      "zod": "4.3.6"
   },
   "devDependencies": {
      "@biomejs/biome": "2.3.12",
      "@types/bun": "1.3.6",
      "bumpp": "10.4.0",
      "bunup": "0.16.20",
      "typescript": "5.9.3"
   },
   "peerDependencies": {
      "typescript": ">=4.5.0"
   },
   "peerDependenciesMeta": {
      "typescript": {
         "optional": true
      }
   },
   "license": "MIT",
   "repository": {
      "type": "git",
      "url": "https://github.com/F-O-T/contentta-nx.git"
   },
   "homepage": "https://github.com/F-O-T/contentta-nx/blob/master/libraries/xml",
   "bugs": {
      "url": "https://github.com/F-O-T/contentta-nx/issues"
   },
   "publishConfig": {
      "access": "public"
   }
}
